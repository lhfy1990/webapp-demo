{
  "name": "webapp-demo",
  "version": "1.0.0",
  "description": "Demo as a web-app-template",
  "main": "server.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "lodash-id": "^0.14.0",
    "lowdb": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "postinstall": "cd app && npm install && npm run build && cd ..",
    "start": "node server.js",
    "build": "cd app && npm run build",
    "test:server": "mocha",
    "test:app": "cd app && npm test",
    "dev": "run-p dev:*",
    "dev:server": "nodemon server.js",
    "dev:app": "cd app && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git@github-mqi.com:qimuxi1990/webapp-demo.git"
  },
  "nodemonConfig": {
    "ignore": [
      "app/*",
      "test/*",
      "db.json"
    ],
    "delay": "2500"
  },
  "author": "Muxi Qi",
  "license": "MIT"
}
